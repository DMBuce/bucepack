#!/bin/bash

latest="$(./bin/latest)"
pack="${1%.zip}"

if [[ -f cache/$pack.files ]]; then
	output=()
	while read file; do
		if [[ -f "$latest.jar/$file" ]]; then
			output+=("$file")
		fi
	done < <(grep -E '^(data|assets)/minecraft' "cache/$pack.files")
	if [[ -n "$output" ]]; then
		cat <<-EOF
			.Minecraft files included in \`$pack.zip\`
			[%collapsible]
			====

			\`\`\`
			$(printf "%s\n" "${output[@]}")
			\`\`\`

			====
		EOF
	fi
fi

