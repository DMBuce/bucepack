#!/bin/bash

# switch to git root
gitroot="$(git rev-parse --show-toplevel)" || exit
cd "$gitroot"

# parse args
file="$1"
latest="$(./bin/latest)"

# validate args
if [[ ! -f "$latest.jar/$file" ]]; then
	echo "File not found: $latest.jar/$file"
	exit 1
elif [[ ! -f "$file" ]]; then
	echo "File not found: $file"
	exit 1
fi

# do the thing
${prog-diff -u} "$latest.jar/$file" "$file"
#sed -i "2a\\$(grep category "$latest.jar/$file")" "$file"

