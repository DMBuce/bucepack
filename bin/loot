#!/bin/bash

pack="${1%.zip}"

if [[ -f cache/$pack.files ]]; then
	output="$(
		grep '^data/minecraft.*/loot_tables/' "cache/$pack.files" \
			| ./bin/path2res \
			| sed 's/.*/* `&`/'
	)"
	if [[ -n "$output" ]]; then
		cat <<-EOF
			.Click for a summary of loot tables
			[%collapsible]
			====
			This datapack modifies the following loot tables:

			$output

			====
		EOF
	fi
fi

